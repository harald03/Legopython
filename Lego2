#!/usr/bin/env pybricks-micropython
from pybricks.hubs import EV3Brick
from pybricks.ev3devices import (Motor, TouchSensor, ColorSensor,
                                 InfraredSensor, UltrasonicSensor, GyroSensor)
from pybricks.parameters import Port, Stop, Direction, Button, Color
from pybricks.tools import wait, StopWatch, DataLog
from pybricks.robotics import DriveBase
from pybricks.media.ev3dev import SoundFile, ImageFile

# Initialize the EV3 Brick
ev3 = EV3Brick()

# Configure motors
gripper_motor = Motor(Port.A)
elbow_motor = Motor(Port.B)
base_motor = Motor(Port.C)

# Configure color sensor
color_sensor = ColorSensor(Port.S2)

# Initialize the elbow
elbow_motor.run_time(-50, 1000)  # Lower the arm
elbow_motor.run(50)               # Raise the arm slowly
while color_sensor.color() != Color.WHITE:  # Wait until color sensor detects white
    wait(10)
elbow_motor.stop()
elbow_motor.reset_angle(0)

# Initialize the base
base_motor.run_time(-60, 1000)  # Rotate base motor
base_motor.stop()
base_motor.reset_angle(0)

# Initialize the gripper
gripper_motor.run_until_stalled(200, then=Stop.COAST, duty_limit=50)
gripper_motor.reset_angle(0)
gripper_motor.run_target(200, -90)

# Define the three destinations for picking up and moving the objects
LEFT = 200
MIDDLE = 100
RIGHT = 0

# Function to pick up an object
def robot_pick(position):
    base_motor.run_target(60, position)
    elbow_motor.run_target(60, -40)
    gripper_motor.run_until_stalled(200, then=Stop.HOLD, duty_limit=50)
    elbow_motor.run_target(60, 0)

# Function to release an object
def robot_release(position):
    base_motor.run_target(60, position)
    elbow_motor.run_target(60, -40)
    gripper_motor.run_target(200, -90)
    elbow_motor.run_target(60, 0)

# Function to detect color
def detect_color():
    return color_sensor.color()

# Main loop
while True:
    robot_pick(RIGHT)
    robot_release(MIDDLE)
    robot_pick(RIGHT)
    robot_release(LEFT)
